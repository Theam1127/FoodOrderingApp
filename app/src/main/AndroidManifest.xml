<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.tarc.foodorderingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakePayment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MaintenanceSetting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddOrderItem"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".ConfirmAddOrderItem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GenerateReport"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeOrder"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RestaurantTables"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PaymentHistory"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PaymentHistoryDetail"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddMenuActivity"/>
        <activity android:name=".UpdateMenuActivity"/>
        <activity android:name=".AddStaffActivity"/>


    </application>

</manifest>