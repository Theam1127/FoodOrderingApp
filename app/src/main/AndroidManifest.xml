<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.tarc.foodorderingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogIn"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakePayment"
            android:screenOrientation="portrait"
            android:label="Payment"/>
        <activity
            android:name=".ForgotPassword"
            android:screenOrientation="portrait"
            android:label="Forgot Password"/>
        <activity
            android:name=".ChangePassword"
            android:screenOrientation="portrait"
            android:label="Change Password"/>
        <activity
            android:name=".MaintenanceSetting"
            android:screenOrientation="portrait"
            android:label="Maintenance"/>
        <activity
            android:name=".AddOrderItem"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:label="Add Order"/>
        <activity
            android:name=".ConfirmAddOrderItem"
            android:screenOrientation="portrait"
            android:label="Order Confirmation"/>
        <activity
            android:name=".GenerateReport"
            android:screenOrientation="portrait"
            android:label="Generate Report"/>
        <activity
            android:name=".MakeOrder"
            android:screenOrientation="portrait"
            android:label="Make Order"/>
        <activity
            android:name=".RestaurantTables"
            android:screenOrientation="portrait"
            android:label="Restaurant Tables"/>
        <activity
            android:name=".PaymentHistory"
            android:screenOrientation="portrait"
            android:label="Payment History"/>
        <activity
            android:name=".PaymentHistoryDetail"
            android:screenOrientation="portrait"
            android:label="Payment Details"/>
        <activity
            android:name=".AddMenuActivity"
            android:screenOrientation="portrait"
            android:label="Add Menu Item"/>
        <activity
            android:name=".UpdateMenuActivity"
            android:screenOrientation="portrait"
            android:label="Update Menu Item"/>
        <activity
            android:name=".AddStaffActivity"
            android:screenOrientation="portrait"
            android:label="Add Staff"/>
        <activity
            android:label="Home"
            android:name=".HomePage"
            android:screenOrientation="portrait" />
        <!--
            <activity
            android:name=".LogIn"
            android:screenOrientation="portrait"/>
        -->
        <activity android:name=".UpdateStaffActivity"
            android:label="Update Staff"></activity>
    </application>

</manifest>