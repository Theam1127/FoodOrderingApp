<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStaffActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewStaff"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                app:srcCompat="@drawable/user_icon" />

            <Button
                android:id="@+id/buttonBrowse"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Browse" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Staff ID : " />

            <EditText
                android:id="@+id/editTextStaffId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Name : " />

            <EditText
                android:id="@+id/editTextStaffName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Position :" />

            <Spinner
                android:id="@+id/spinnerStaffPosition"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/position" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="D.O.B. : " />

            <my.edu.tarc.foodorderingapp.DatePickerScrollable
                android:id="@+id/datePickerDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="I.C. : " />

            <EditText
                android:id="@+id/editTextIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Gender : " />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButtonFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Contact : " />

            <EditText
                android:id="@+id/editTextStaffContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                tools:layout_editor_absoluteX="122dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="E-mail : " />

            <EditText
                android:id="@+id/editTextStaffEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Status : " />


            <Spinner
                android:id="@+id/spinnerStaffStatus"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/status" />

            <Button
                android:id="@+id/buttonAddStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Add" />

            <Button
                android:id="@+id/buttonReset4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset" />


        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>