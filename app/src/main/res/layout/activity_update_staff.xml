<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.edu.tarc.foodorderingapp.UpdateStaffActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewStaff2"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                app:srcCompat="@drawable/cy" />

            <Button
                android:id="@+id/buttonBrowse2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Browse" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Staff ID : " />

            <Spinner
                android:id="@+id/spinnerStaffId"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Name : " />

            <EditText
                android:id="@+id/editTextStaffName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Position :" />

            <Spinner
                android:id="@+id/spinnerStaffPosition2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/position" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Contact : " />

            <EditText
                android:id="@+id/editTextStaffContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                tools:layout_editor_absoluteX="122dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="E-mail : " />

            <EditText
                android:id="@+id/editTextStaffEmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:text="Status : " />


            <Spinner
                android:id="@+id/spinnerStaffStatus2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/status" />

            <Button
                android:id="@+id/buttonUpdateStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Update" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset" />


        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>